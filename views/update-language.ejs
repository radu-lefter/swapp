<!DOCTYPE html>
<html lang="en">
  <html lang="en">
    <head>
      <meta charset="utf-8" />
      <meta
        name="viewport"
        content="width=device-width, initial-scale=1, shrink-to-fit=no"
      />
      <meta name="description" content="" />
      <title>Swadesh</title>

      <link
        rel="canonical"
        href="https://getbootstrap.com/docs/4.5/examples/album/"
      />

      <!-- Bootstrap core CSS -->
      <link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
        crossorigin="anonymous"
      />

      <link href="css/styles.css" rel="stylesheet" />
    </head>
    <body>
      <%- include('common/header'); -%>

      <div class="container">
        <h1 class="text-center">Update Language</h1>
        <div class="row justify-content-md-center">
          <div class="col-">
            <form method="POST">
              <div class="form-group">
                <label for="name">Name</label>
                <input
                  value="<%= language.language %>"
                  type="text"
                  class="form-control"
                  id="name"
                  name="language"
                  
                />

                <% if (errors['language']) { %>
                  <p style="color: red"><%= errors['language'].message %></p>
                <% } %>
                
              </div>

              <div class="form-group">
                <label for="iso693">ISO 693-3</label>
                <input
                value="<%= language.iso693 %>"
                  type="text"
                  class="form-control"
                  id="iso693"
                  name="iso693"
                  placeholder="Enter iso code"
                />

                
              </div>

              <div class="form-group">
                <label for="family">Select family</label>
                <select
                  class="form-control"
                  name="family"
                  id="family"
                >
                  <% if(language.family == "") { %> <option selected></option> <% } else { %> <option >Please select</option> <%}%>
                  <% if(language.family == "Niger-Congo") { %> <option selected>Niger-Congo</option> <% } else { %> <option >Niger-Congo</option> <%}%>
                  <% if(language.family == "Austronesian") { %> <option selected>Austronesian</option> <% } else { %> <option >Austronesian</option> <%}%>
                  <% if(language.family == "Trans–New Guinea") { %> <option selected>Trans–New Guinea</option> <% } else { %> <option >Trans–New Guinea</option> <%}%>
                  <% if(language.family == "Sino-Tibetan") { %> <option selected>Sino-Tibetan</option> <% } else { %> <option >Sino-Tibetan</option> <%}%>
                  <% if(language.family == "Indo-European") { %> <option selected>Indo-European</option> <% } else { %> <option >Indo-European</option> <%}%>
                  <% if(language.family == "Australian") { %> <option selected>Australian</option> <% } else { %> <option >Australian</option> <%}%>
                  <% if(language.family == "Afro-Asiatic") { %> <option selected>Afro-Asiatic</option> <% } else { %> <option >Afro-Asiatic</option> <%}%>
                  <% if(language.family == "Nilo-Saharan") { %> <option selected>Nilo-Saharan</option> <% } else { %> <option >Nilo-Saharan</option> <%}%>
                  <% if(language.family == "Oto-Manguean") { %> <option selected>Oto-Manguean</option> <% } else { %> <option >Oto-Manguean</option> <%}%>
                  <% if(language.family == "Austroasiatic") { %> <option selected>Austroasiatic</option> <% } else { %> <option >Austroasiatic</option> <%}%>
                  <% if(language.family == "Tai–Kadai") { %> <option selected>Tai–Kadai</option> <% } else { %> <option >Tai–Kadai</option> <%}%>
                  <% if(language.family == "Dravidian") { %> <option selected>Dravidian</option> <% } else { %> <option >Dravidian</option> <%}%>
                  <% if(language.family == "Tupian") { %> <option selected>Tupian</option> <% } else { %> <option >Tupian</option> <%}%>
                </select>
            
                
              </div>


              <div class="form-group">
                <label for="region">Select region</label>
                <select
                  class="form-control"
                  name="region"
                  id="region"
                >
                <% if(language.region == "") { %> <option selected></option> <% } else { %> <option >Please select</option> <%}%>
                <% if(language.region == "Worldwide") { %> <option selected>Worldwide</option> <% } else { %> <option >Worldwide</option> <%}%>
                <% if(language.region == "Europe") { %> <option selected>Europe</option> <% } else { %> <option >Europe</option> <%}%>
                <% if(language.region == "Asia") { %> <option selected>Asia</option> <% } else { %> <option >Asia</option> <%}%>
                <% if(language.region == "Africa") { %> <option selected>Africa</option> <% } else { %> <option >Africa</option> <%}%>
                <% if(language.region == "North America") { %> <option selected>North America</option> <% } else { %> <option >North America</option> <%}%>
                <% if(language.region == "South America") { %> <option selected>South America</option> <% } else { %> <option >South America</option> <%}%>
                <% if(language.region == "Central America") { %> <option selected>Central America</option> <% } else { %> <option >Central America</option> <%}%>
                <% if(language.region == "Oceania") { %> <option selected>Oceania</option> <% } else { %> <option >Oceania</option> <%}%>

                </select>

               
            
                
              </div>

              <div class="form-group">
                <label for="region">Select status</label>
                <select
                  class="form-control"
                  name="status"
                  id="status"
                >
                  <% if(language.status == "") { %> <option selected></option> <% } else { %> <option >Please select</option> <%}%>
                  <% if(language.status == "International") { %> <option selected>International</option> <% } else { %> <option >International</option> <%}%>
                  <% if(language.status == "National") { %> <option selected>National</option> <% } else { %> <option >National</option> <%}%>
                  <% if(language.status == "Provincial") { %> <option selected>Provincial</option> <% } else { %> <option >Provincial</option> <%}%>
                  <% if(language.status == "Threatened") { %> <option selected>Threatened</option> <% } else { %> <option >Threatened</option> <%}%>
                  <% if(language.status == "Moribund") { %> <option selected>Moribund</option> <% } else { %> <option >Moribund</option> <%}%>
                  <% if(language.status == "Extinct") { %> <option selected>Extinct</option> <% } else { %> <option >Extinct</option> <%}%>

                </select>
            
                
              </div>

              <div class="form-group">
                <label for="speakers">Speakers</label>
                <input
                value="<%= language.speakers %>"
                  type="number"
                  class="form-control"
                  id="speakers"
                  name="speakers"
                  placeholder="Enter number of speakers"
                />

                
              </div>

              <div class="form-group">
                <label for="description">Description</label>
                <textarea
                  type="text"
                  class="form-control"
                  id="description"
                  name="description"
                  rows="6" cols="50"
                />
                <%= language.description %>
                </textarea>

                
              </div>
              
              <p>Introduce any of the words you know</p>

              
      
              <% for (const [key, value] of Object.entries(language.words)) { %>
      
                <div class="form-group">
                  <label ><%= key %></label>
                  <input
                    value="<%= value %>"
                    type="text"
                    class="form-control"
                    name="<%= key %>"
                  />
  
                  
                </div>
                    
                <% } %>
                  
              

              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
      <%- include('common/footer'); -%>
    </body>
  </html>
</html>
