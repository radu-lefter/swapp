<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <title>Swadesh Languages</title>

    

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.5/examples/album/"
    />

    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />

    <link href="css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('common/header'); -%>
<div class="container">
    <div class="row col-md-12 col-md-offset-2 custyle mx-auto">
      
    
    <h1 class="mx-auto"> Swadesh list  </h1>
  
  
    <table class="table table-striped custab">
    
        <tr>
            <th>Name</th>
            <td><%=  language.language  %></td>
        </tr>
        <tr>
            <th>Family</th>
            <td><%=  language.family  %></td>
        </tr>

        <%  
        
          language.words.forEach(word => {
            
        %>

            <tr>
                <th><%=  word[0]  %></th>
                <td><%=  word[1]  %></td>   
            </tr>
            
         <%  
          });
         %>
         <tr>
            <td><a class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span> Edit</a></td>
            <td><a  href="/languages/delete/<%= language.id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
        </tr>


       
    
          
    </table>
    </div>
    
    <%- include('common/footer') -%>
  </body>
</html>
