<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <title>Swadesh Languages</title>

    

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.5/examples/album/"
    />

    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />

    <link href="css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('common/header'); -%>
<div class="container">
    <div class="row col-md-12 col-md-offset-2 custyle mx-auto">
      
    
    <h1 class="mx-auto"> Swadesh list  </h1>
  
  
    <table class="table table-striped custab">
    
        <tr>
            <th class="table-info">Name</th>
            <td class="table-info"><%=  language.language  %></td>
        </tr>
        <tr>
            <th>Family</th>
            <td><%=  language.family  %></td>
        </tr>
        <tr>
          <th>ISO</th>
          <td><%=  language.iso693  %></td>
        </tr>
        <tr>
          <th>Region</th>
          <td><%=  language.region  %></td>
        </tr>
        <tr>
          <th>Status</th>
          <td><%=  language.status  %></td>
        </tr>
        <tr>
          <th>Speakers</th>
          <td><%=  language.speakers  %></td>
        </tr> 
        <tr>
          <th>Description</th>
          <td><%=  language.description  %></td>
        </tr> 

        <%  
        
        for (const word in language.words) {
            
        %>

            <tr>
                <th><%=  word  %></th>
                <td><%=  language.words[word]  %></td>   
            </tr>
            
         <%  
          };
         %>
         <tr>
            <td><a href="/view/update/<%= language.id %>" class='btn btn-info btn-xs'><span class="glyphicon glyphicon-edit"></span> Edit</a></td>
            <td><a  href="/view/delete/<%= language.id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete</a></td>
        </tr>


       
    
          
    </table>
    </div>
    
    <%- include('common/footer') -%>
  </body>
</html>
